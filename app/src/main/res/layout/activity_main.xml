<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/photo">

    <TextView
        android:id="@+id/Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вход"
        android:layout_marginTop="56dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Exit"
        android:layout_marginTop="60dp"
        android:background="@drawable/button"
        />

    <ImageView
        android:layout_width="115dp"
        android:layout_height="98dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Exit"
        android:layout_marginTop="80dp"
        android:background="@drawable/asset"
        />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image"
        android:layout_marginTop="50dp"
        android:text="Добро пожаловать!"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/exiit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome"
        android:layout_marginTop="15dp"
        android:text="Выполните вход\n или зарегестрируйтесь"
        android:textColor="@color/white"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="265dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exiit"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:hint="  Введите вашу почту"
        android:textSize="15sp"
        android:textColorHint="@color/black2"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="265dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:hint="   Введите пароль"
        android:textSize="15sp"
        android:textColorHint="@color/black2"
        />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="265dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:layout_marginTop="15dp"
        android:text="Войти"
        android:textColor="@color/white"
        android:background="@color/orange"
        />

    <TextView
        android:id="@+id/passwordd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="110dp"
        android:layout_marginTop="20dp"
        android:text="Забыли пороль?"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/exit_button"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/exit_button"
        app:layout_constraintStart_toEndOf="@+id/passwordd"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:text="Нажми сюда"
        android:textColor="@color/orange"
        />



</androidx.constraintlayout.widget.ConstraintLayout>